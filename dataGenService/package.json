{
  "name": "auth-service",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "nodemon --exec ts-node src/index.ts",
    "test": "jest --coverage",
    "dev": "tsc --watch",
    "clear": "rm -rf node_modules dist && yarn cache clean",
    "docker-build": "docker build -t zahramaslavi/auth-service .",
    "docker-run": "docker run -p 3001:3001 zahramaslavi/auth-service",
    "docker-dev-test": "docker run -e CI=true zahramaslavi/auth-service yarn test",
    "docker-run-be": "docker compose up --build",
    "docker-dev-test-watch": "docker exec -it zahramaslavi/auth-service-be yarn test",
    "docker-prod-build": "docker build -t zahramaslavi/auth-service-prod .",
    "docker-prod-run": "docker run -p 8080:80 zahramaslavi/auth-service-prod"
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.5.5",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.0",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.2",
    "morgan": "^1.10.0",
    "nodemon": "^3.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2",
    "validator": "^13.12.0",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.13",
    "@types/supertest": "^6.0.2",
    "@types/validator": "^13.12.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5"
  }
}
